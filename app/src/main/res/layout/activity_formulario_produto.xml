<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.FormularioProdutoActivity">

        <EditText
            android:id="@+id/acitivity_formulario_produto_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/value_nome"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/acitivity_formulario_produto_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/value_descricao"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@id/acitivity_formulario_produto_nome"
            app:layout_constraintStart_toStartOf="@id/acitivity_formulario_produto_nome"
            app:layout_constraintTop_toBottomOf="@id/acitivity_formulario_produto_nome" />


        <EditText
            android:id="@+id/acitivity_formulario_produto_valor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/value_valor"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@id/acitivity_formulario_produto_nome"
            app:layout_constraintStart_toStartOf="@id/acitivity_formulario_produto_nome"
            app:layout_constraintTop_toBottomOf="@id/acitivity_formulario_produto_descricao" />

        <Button
            android:id="@+id/acitivity_formulario_produto_save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/save_botton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acitivity_formulario_produto_valor"
            app:layout_constraintVertical_bias="1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>